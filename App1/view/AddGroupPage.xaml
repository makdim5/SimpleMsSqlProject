<Page
    x:Class="App1.view.AddGroupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1.view"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0"   x:Name ="nameField" Foreground="White" FontSize="30" PlaceholderText="Введите название категории"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
        <Button Grid.Row="1" Content="Ok" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Stretch" Click="Button_Click"/>
        <Button Grid.Row="2" Content="Назад" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Stretch" Click="Button_Click_1" />
    </Grid>
</Page>
